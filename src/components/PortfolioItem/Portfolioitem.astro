---
interface PortFolioItemProps {
    imageUrl: string;
    title: string;
    description: string;
}
const { title, subtitle, imageUrl, type, link } = Astro.props;
const url = "http://www." + link;
---

<li class="list-none bg-white shadow-md transition hover:shadow-lg">
    <img src={imageUrl} alt={title} class="w-full h-48 object-cover mb-4" />
    <aside class="px-8 pb-6 pt-4">
        <h3 class="text-theme-on-bg text-2xl font-medium">{title}</h3>
        <p class="text-xl font-thin italic mb-4">{subtitle}</p>
        <p class="">{type}</p>
        <a class="text-sm font-thin" href={url}>{link}</a>
    </aside>
</li>

<style>
    /* Aquí puedes agregar estilos específicos para este componente si es necesario */
</style>